<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            	<form id="addPost" name="addPost" method="post">
            		<button class="btn" type="submit" name="addPostButton">Přidat příspěvek</button>
            		<input type="text" placeholder="Jméno" name="postName">
            		<input type="text" placeholder="Podtitul" name="postSubheading">
            		<textarea name="postBody"></textarea>
            	</form>
            </div>
        </div>
    </div>
</article>