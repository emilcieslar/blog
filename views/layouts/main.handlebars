<body>

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Zobraz/Skryj navigaci</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Emmil<span>_</span></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="/">Domů</a>
                    </li>
                    <li>
                        <a href="/about">O mne</a>
                    </li>
                    <li>
                        <a href="/contact">Kontakt</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="{{#if post}}background: #{{color}}{{else}}background-image: url('/img/{{bg}}'){{/if}}">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="{{#if post}}post{{else}}site{{/if}}-heading">
                        {{#if post}}
                            <h1>{{heading}}</h1>
                            <h2 class="subheading">{{subheading}}</h2>
                            {{#unless postedBy}}
                                <span class="meta"><a href="#">{{userId}}</a>, {{datetime}}</span>
                            {{/unless}}
                        {{else}}
                            <h1>{{heading}}</h1>
                            <hr class="small">
                            <span class="subheading">{{subheading}}</span>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </header>

    {{{body}}}

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <ul class="list-inline text-center">
                        <li>
                            <a href="https://twitter.com/emilcieslar">
                                <span class="fa-stack fa-lg">
                                    <i class="fa fa-twitter fa-stack-1x"></i>
                                </span>
                            </a>
                        </li>
                        <!--<li>
